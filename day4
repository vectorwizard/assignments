import os

# Take file name and input string from user
file_name = input("Enter the name of the file (with extension): ")
input_string = input("Enter the string of characters to write/append: ")

# Check if file exists
if os.path.exists(file_name):
    print("File already exists.")

    # Read the file and print the first and last line
    with open(file_name, 'r') as f:
        lines = f.readlines()
        if len(lines) == 0:
            print("The file is empty.")
        elif len(lines) == 1:
            print(f"Only one line in the file: {lines[0].strip()}")
        else:
            print(f"First line: {lines[0].strip()}")
            print(f"Last line: {lines[-1].strip()}")

    # Append the new string
    with open(file_name, 'a') as f:
        f.write(input_string + "\n")
    print("The string has been appended to the file.")
else:
    # Create the file and write the string
    with open(file_name, 'w') as f:
        f.write(input_string + "\n")
    print("File created.")
    print("The string has been written into the file.")
# Take source and destination file names from the user
source_file = input("Enter the source filename: ")
destination_file = input("Enter the destination filename: ")

try:
    # Open and read from the source file
    with open(source_file, "r") as src:
        content = src.read()
        char_count = len(content)

    # Write the content to the destination file
    with open(destination_file, "w") as dest:
        dest.write(content)

    # Success message
    print(f"\n‚úÖ File copied successfully from '{source_file}' to '{destination_file}'.")
    print(f"üî¢ Total characters copied: {char_count}")

except FileNotFoundError:
    print(f"\n‚ùå Error: The file '{source_file}' was not found.")