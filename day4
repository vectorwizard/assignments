import random

# Step 1: Create random list
lst = [random.randint(1, 9) for _ in range(20)]
print("Original List:", lst)

# (a) Function to find unique elements (occur only once)
def unique(lst):
    result = []
    for x in lst:
        if lst.count(x) == 1:
            result.append(x)
    return result

# (b) Function to find duplicates with occurrences
def duplicate(lst):
    result = {}
    for x in lst:
        count = lst.count(x)
        if count > 1:
            result[x] = count
    return result

# (c) Function to create unique list (remove duplicates, keep each element once)
def createuniq(lst):
    return list(set(lst))

# Test
print("Unique Elements (occur once):", unique(lst))
print("Duplicate Elements with counts:", duplicate(lst))
print("List with unique elements (each only once):", createuniq(lst))

def has_three_zeros(num_str):
    """Check if the number string contains at least 3 zeros."""
    return num_str.count("0") >= 3

# Step (a) Initialize sets
s1, s2 = set(), set()

# Step (b) Take input for s1
print("Enter numbers for Set s1 (Stop when a number contains at least three zeros):")
while True:
    num_str = input("Enter a number for s1: ")
    if has_three_zeros(num_str):
        print("Stopping input for s1.")
        break
    s1.add(int(num_str))

# Take input for s2
print("\nEnter numbers for Set s2 (Stop when a number contains at least three zeros):")
while True:
    num_str = input("Enter a number for s2: ")
    if has_three_zeros(num_str):
        print("Stopping input for s2.")
        break
    s2.add(int(num_str))

# Step (d) Ask user for operation
print("\nChoose set operation to perform:")
print("1. Union")
print("2. Intersection")
print("3. Set Difference (s1 - s2)")

choice = input("Enter your choice (1/2/3): ")

# Step (e) Perform operation
if choice == "1":
    result = s1.union(s2)
    print(f"\nUnion of s1 and s2: {result}")
elif choice == "2":
    result = s1.intersection(s2)
    print(f"\nIntersection of s1 and s2: {result}")
elif choice == "3":
    result = s1.difference(s2)
    print(f"\nSet Difference (s1 - s2): {result}")
else:
    print("Invalid choice.")